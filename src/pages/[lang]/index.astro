---
import HpLayout from '@layouts/Hp.astro';
import { getI18nRouteParams } from '@i18n/config';
import type { I18nRouteParams } from '@i18n/types';
import { hpUrlMap } from 'utils/routing';
import type { Params } from 'astro';
import type { Lang } from '@i18n/types';

export async function getStaticPaths() {
  return getI18nRouteParams().map((params) => ({ params }));
}

const { lang } = Astro.params as I18nRouteParams & Params;
---

<HpLayout
  lang={lang as Lang}
  title={`RomaJs - ${lang}`}
  description={`RomaJs - ${lang}`}
  urlMap={hpUrlMap}
>
  <h1>HP - {lang}</h1>
</HpLayout>
